@{
}

@model Book

<div class="card card-outline-primary m-1 p-1">
    <ul>
        <div class="bg-faded p-1">
            <h4>
                <span class="badge badge-pill badge-primary" style="float:right">
                    <li>Title: @Model.Title</li>
                </span>
            </h4>
        </div>
        <div class="card-text p-1"><li>Title: @Model.Title</li></div>
        <div class="card-text p-1"><li>Author: @Model.Author</li></div>
        <div class="card-text p-1"><li>Publisher: @Model.Publisher</li></div>
        <div class="card-text p-1"><li>Isbn: @Model.Isbn</li></div>
        <div class="card-text p-1"><li>Classification: @Model.Classification</li></div>
        <div class="card-text p-1"><li>Category: @Model.Category</li></div>
        <div class="card-text p-1"><li>PageCount: @Model.PageCount</li></div>
        <div class="card-text p-1"><li>Price: @Model.Price</li></div>
     </ul>

    <form method="post" asp-page="/Purchase">
        <input type="hidden" asp-for="@Model.BookId"/>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>

        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Purchase</button>
        </span>
    </form>

</div>
